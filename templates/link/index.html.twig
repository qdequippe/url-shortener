{% extends 'base.html.twig' %}

{% block title %}Link index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="bg-light card-header">
                    <div class="align-items-center row">
                        <div class="col">
                    <h5 class="mb-0">Link index</h5>

                        </div>
                        <div class="col-auto text-right">

                            <a href="{{ path('link_new') }}" class="btn btn-primary">Create new</a>
                        </div>
                    </div>
                </div>
                <div class="border-top p-0 card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Address</th>
                                <th>Target</th>
                                <th>VisitCount</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for link in links %}
                                <tr>
                                    <td>{{ link.id }}</td>
                                    <td>
                                        <a href="{{ url('link_got_to', {'address': link.address}) }}" target="_blank">{{ url('link_got_to', {'address': link.address}) }}</a>
                                    </td>
                                    <td>
                                        <a href="{{ link.target }}" target="_blank">{{ link.target }}</a>
                                    </td>
                                    <td>{{ link.visitCount }}</td>
                                    <td>
                                        <a href="{{ path('link_stats', {'id': link.id}) }}">stats</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
