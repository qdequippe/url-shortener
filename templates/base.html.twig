<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="navbar navbar-expand-md bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand text-dark" href="#">Acme</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="{{ path('link_index') }}">Links</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Domains</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="https://github.com/qdequippe/url-shortener" target="_blank">
                            <i class="fab fa-github"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            Report
                        </a>
                    </li>
                </ul>
            </div>
            <a class="btn btn-link" href="#">Sign In</a>
            <a class="btn btn-outline-primary" href="#">Sign up</a>
        </header>
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {{ include('_delete_modal.html.twig') }}
        {{ include('_qr_code_modal.html.twig') }}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
